{
  "compilerOptions": {
    "baseUrl": "./",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "nodenext",
    "target": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "nodenext",
    "importHelpers": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "lib": [
      "DOM",
	    "DOM.Iterable",
      "ES5",
      "ES6",
      "ES7",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
